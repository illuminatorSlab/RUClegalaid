/* law.wxss */
.info {
    text-align: center;
}

.title {
    font-size: 1.3em;
    font-weight: 700;
    color: #000;
    margin-top: 1em;
}

.info-text {
    font-size: .7em;
    font-weight: normal;
    color: #999;
    margin: 1.3em 2.5em;
    line-height: 1.3;
}

scroll-view {
    height: 90vh;
    border: 1px solid #cccccc !important;
    padding: 1px 5px;
    border-radius: 6px !important;
    margin: 1em 0;
    width: auto;
}

.chapter,
.part {
    text-align: center;
    font-size: 1.1em;
    font-weight: bolder;
    color: #111;
    margin: 1.3em auto;
}

.section {
    text-align: center;
    font-size: 1em;
    font-weight: bold;
    color: #222;
    margin: 1em auto;
}

.article {
    align-items: left;
    font-size: .8em;
    color: #333;
    margin: .7em auto;
    line-height: 1.5;
}

.article .label {
    font-weight: bold;
}

.label + .text {
    margin-left: 1em;
}