/**index.wxss**/
.header {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-bottom: .5em;
}

.header .title {
    font-weight: 700;
    font-size: 1.9em;
    margin-bottom: .5em;
}

.header .text {
    font-weight: 500;
    font-size: .8em;
    color: #aaa;
}

.cat {
    margin: 1em 2em;
    padding-bottom: .5em;
    border-width: 1px 1px 1px 5px;
    border-style: solid;
    border-color: rgb(204, 204, 204) rgb(204, 204, 204) rgb(204, 204, 204) rgb(141, 173, 170);
    border-radius: 4px;
}

.cat .cat-title {
    font-size: 1.1em;
    font-weight: 600;
    padding-left: 0.3em;
    margin: 0.3em auto;
}

.cat .cat-law {
    font-size: .8em;
    padding: 0.2em 0.5em;
    color: #233;
}